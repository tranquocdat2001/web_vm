

<div id="cart" class="col-md-12">

    @Html.Action("Breadcrumb", "Category", new { cateName = "Giỏ hàng" })

    <div class="cart-content">
        <h1><span>Giỏ hàng của tôi</span></h1>
        <div class="steps clearfix">
            <ul class="clearfix">
                <li class="cart active col-md-2 col-xs-12 col-sm-4 col-md-offset-3 col-sm-offset-0 col-xs-offset-0"><span><i class="glyphicon glyphicon-shopping-cart"></i></span><span>Giỏ hàng của tôi</span><span class="step-number"><a>1</a></span></li>
                <li class="payment col-md-2 col-xs-12 col-sm-4"><span><i class="glyphicon glyphicon-usd"></i></span><span>Thanh toán</span><span class="step-number"><a>2</a></span></li>
                <li class="finish col-md-2 col-xs-12 col-sm-4"><span><i class="glyphicon glyphicon-ok"></i></span><span>Hoàn tất</span><span class="step-number"><a>3</a></span></li>
            </ul>
        </div>
        <div class="cart-block">
            <div class="cart-info table-responsive">
                <table class="table product-list">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Tên sản phẩm</th>
                            <th>Giá</th>
                            <th>Số lượng</th>
                            <th>Thành tiền</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- ngRepeat: item in OrderDetails -->
                        <tr ng-repeat="item in OrderDetails" class="ng-scope">
                            <td class="image">
                                <a href="/san-pham/coi-so-diep.html"> <img ng-src="/Uploads/shop2005/images/product/coi-so-diep-1_master.jpg" class="img-responsive" src="/Uploads/shop2005/images/product/coi-so-diep-1_master.jpg"></a>
                            </td>
                            <td class="des">
                                <a href="/san-pham/coi-so-diep.html" class="ng-binding">Cồi sò điệp</a>
                                <span class="ng-binding">500g</span>
                            </td>
                            <td class="price ng-binding">160,000đ</td>
                            <td class="quantity">
                                <input type="number" value="1" class="text ng-pristine ng-untouched ng-valid" ng-model="item.Quantity" ng-change="updateItemCart(item)">
                            </td>
                            <td class="amount ng-binding">
                                320,000đ
                            </td>
                            <td class="">
                                <a ng-click="removeItemCart(item)" href="javascript:void(0)">
                                    <i class="glyphicon glyphicon-trash"></i>
                                </a>
                            </td>
                        </tr><!-- end ngRepeat: item in OrderDetails -->
                    </tbody>
                </table>
            </div>
            <div class="clearfix text-right">
                <span><b>Tổng thanh toán:</b></span>
                <span class="pay-price ng-binding">
                    320,000đ
                </span>
            </div>
            <div class="button text-right">
                <a class="comeback" href="/" onclick="window.history.back()">Tiếp tục mua hàng</a>
                <a class="button-default" id="checkout" href="/thanh-toan">Tiến hành thanh toán</a>
            </div>
        </div>
    </div>
</div>
